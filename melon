#!/bin/sh

build() {
	if ! command -v tsc &> /dev/null
	then
    	echo "Typescript is not installed. Please run |npm i -g typescript| to continue."
    	exit
	fi
    tsc
}

fix_workspaces() {
    cd firefox
    for file in *; do mv "${file}" "${file/firefox-/}"; done
}

if command -v "node" > /dev/null;
then
    mkdir .dotbuild >/dev/null 2>&1
    rm .dotbuild/command >/dev/null 2>&1
    echo "$@" >> .dotbuild/command

    case $@ in

    rebuild)
        echo Rebuilding...
        build
    ;;

    fix-workspaces)
        echo Deprecated.
        exit
        fix_workspaces >/dev/null 2>&1
        echo Updated the workspaces.
    ;;

    *)
        if test -f ".dotbuild/index.js";
        then
            node .dotbuild $@
        else
        	if ! command -v yarn &> /dev/null
            then
                echo "Yarn is not installed. Please run |npm i -g yarn| to continue."
                exit
            fi

            yarn
            build
            node .dotbuild $@
        fi
    ;;
    esac
else
    echo "This dot command requires node, which wasn't found on the system!"
    exit 1
fi